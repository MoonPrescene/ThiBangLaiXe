<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <LinearLayout
        android:id="@+id/linear_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        tools:ignore="InvalidId">
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="25dp"
            android:layout_margin="15dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/prize"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/content_title"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="19sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/setting"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            app:icon="@drawable/ic_baseline_settings_24"

            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginStart="30dp"
                tools:ignore="HardcodedText" />
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_test"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="25dp"
                                android:backgroundTint="@color/blue"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/document"
                                    android:background="@color/white"
                                    tools:ignore="ContentDescription,TooDeepLayout" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/test"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_save"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                app:cardCornerRadius="25dp"
                                android:backgroundTint="@color/green">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_baseline_bookmark_border_24"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/l_u"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_wrong_answer"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:backgroundTint="@color/red"
                                app:cardCornerRadius="25dp"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:contentDescription="@string/thi_th"
                                    android:src="@drawable/ic_baseline_clear_24" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/c_u_sai"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_fifty_wrong_answer"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:backgroundTint="@color/yellow"
                                app:cardCornerRadius="25dp"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:contentDescription="@string/thi_th"
                                    android:src="@drawable/ic_baseline_menu_book_24"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/_50_c_u_hay_sai"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_picture"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="25dp"
                                android:backgroundTint="@color/blue"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:contentDescription="@string/thi_thử"
                                    android:src="@drawable/ic_baseline_directions_car_24" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/sa_h_nh"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                app:cardCornerRadius="25dp"
                                android:backgroundTint="@color/green">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_baseline_lightbulb_24"
                                    tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/m_o"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView_notice_board"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:backgroundTint="@color/red"
                                app:cardCornerRadius="25dp"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/ic_baseline_remove_24"
                                    tools:ignore="ContentDescription" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/bi_n_b_o"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:cardCornerRadius="25dp"
                                android:backgroundTint="@color/yellow"
                                android:layout_gravity="center">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:contentDescription="@string/thi_th"
                                    android:src="@drawable/facebook" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="@string/tr_gi_p"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView_Progress"
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/ti_n_n_t_p"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <ProgressBar
                        android:id="@+id/determinateBar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="16dp"
                        android:progress="25"
                        android:progressTint="@color/teal_200"
                        app:layout_constraintEnd_toStartOf="@+id/textView_chi_so_an_toan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Progress" />
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@id/determinateBar"
                        android:text="60/574 câu"
                        tools:ignore="InvalidId,UnknownId" />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@id/textView1"
                        android:text="2/20 đề"
                        android:layout_marginBottom="20dp"
                        tools:ignore="InvalidId,UnknownId" />

                    <TextView
                        android:id="@+id/textView_so_cau_dung_sai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 đúng      42 sai"
                        app:layout_constraintEnd_toEndOf="@+id/determinateBar"
                        app:layout_constraintTop_toBottomOf="@id/determinateBar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="2 rớt"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView_so_cau_dung_sai"
                        app:layout_constraintTop_toBottomOf="@id/textView_so_cau_dung_sai"
                        tools:ignore="UnknownId" />
                    
                    <TextView
                        android:id="@+id/textView_chi_so_an_toan"
                        android:layout_width="51dp"
                        android:layout_height="wrap_content"
                        android:text="Chỉ số an toàn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="15sp"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                    
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_baseline_question_mark_24"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17%"
                        android:textStyle="bold"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/red"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_chi_so_an_toan"/>
                    
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ôn tập theo chủ đề"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:textSize="25sp"/>
            <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:elevation="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="13dp"
                        android:src="@drawable/flames" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Câu hỏi điểm liệt"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progress="25"
                    android:progressTint="@color/teal_200"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/166 câu hỏi"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/textView_so_cau_dung_sai2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 đúng      42 sai"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginEnd="15dp"/>
                </LinearLayout>
            </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_marginStart="15dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/trafic_light" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/kh_i_ni_m_v_quy_t_c"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progress="25"
                        android:progressTint="@color/teal_200"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18/166 câu hỏi"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/textView_so_cau_dung_sai8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 đúng      42 sai"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginEnd="15dp"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_marginStart="13dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/personal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Văn hoá và đạo đức"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progress="25"
                        android:progressTint="@color/teal_200"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18/166 câu hỏi"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/textView_so_cau_dung_sai3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 đúng      42 sai"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:elevation="20dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

